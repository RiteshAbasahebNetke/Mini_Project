@model IEnumerable<Mini_Project.Areas.UserArea.ColorTbl>
@{
    Layout ="~/Areas/UserArea/Views/Shared/_LayoutPage1.cshtml";
    int SrNo = 1;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @Html.ActionLink("Add Color","Create")
    <div> 
        <table border="1">
            <thead>
                <tr>
                    <th> Sr.No</th>
                    <th> @Html.DisplayNameFor(p=>p.ColorName) </th>
                    <th> Action Links </th>
                </tr>
            </thead>
            @foreach(var temp in Model)
            {
                <tr>
                    <td> @(SrNo++)</td>
                    <td> @Html.DisplayFor(p=>temp.ColorName) </td>
                    <td>
                        @Html.ActionLink("Edit","Edit", new {id=temp.ColorID})
                        @Html.ActionLink("Delete", "Delete", new {id=temp.ColorID})
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
