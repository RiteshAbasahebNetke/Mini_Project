@model IEnumerable<Mini_Project.Areas.UserArea.CategoryTbl>
@{
    Layout = "~/Areas/UserArea/Views/Shared/_LayoutPage1.cshtml";
    int SrNo = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @Html.ActionLink("Add New","Create")
        <table border="1">
            <thead>
                <tr>
                    <th> Sr.No </th>
                    <th> @Html.DisplayNameFor(p=>p.CategoryName) </th>
                    <th> Action Links </th>
                </tr>
            </thead>
            @foreach(var temp in Model)
            {
                <tr>
                    <td> @(SrNo++)</td>
                    <td> @Html.DisplayFor(p=>temp.CategoryName) </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id=temp.CategoryID})
                        @Html.ActionLink("Delete", "Delete", new {id=temp.CategoryID}) 
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
