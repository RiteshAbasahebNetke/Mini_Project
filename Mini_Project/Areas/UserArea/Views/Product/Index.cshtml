@model IEnumerable<Mini_Project.Areas.UserArea.ProductTbl>
@{
    Layout = "~/Areas/UserArea/Views/Shared/_LayoutPage1.cshtml";
    int SrNo = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
   
</head>
<body>
    @Html.ActionLink("Add New", "Create", new {area="UserArea"})
    <div> 
        <table border="1">
            <thead>
                <tr>
                    <th> Sr.No </th>
                    <th> @Html.DisplayNameFor(p=>p.ProductName) </th>
                    <th> @Html.DisplayNameFor(p=>p.MfgTbl.MfgName) </th>
                    <th> @Html.DisplayNameFor(p=>p.Price) </th>
                    <th> @Html.DisplayNameFor(p=>p.ProductDescription) </th>
                    <th> @Html.DisplayNameFor(p=>p.CategoryTbl.CategoryName) </th>
                    <th> Action Links </th>
                </tr>
            </thead>

            @foreach(var temp in Model)
            {
                <tr>
                    <td> @(SrNo++)</td>
                    <td> @Html.DisplayFor(p=>temp.ProductName) </td>
                    <td> @Html.DisplayFor(p=>temp.MfgTbl.MfgName) </td>
                    <td> @Html.DisplayFor(p=>temp.Price) </td>
                    <td> @Html.DisplayFor(p=>temp.ProductDescription) </td>
                    <td> @Html.DisplayFor(p=>temp.CategoryTbl.CategoryName) </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit",new {id=temp.ProductID})
                        @Html.ActionLink("Details", "Details", new {id=temp.ProductID})
                        @Html.ActionLink("Delete","Delete",new {id=temp.ProductID})
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
